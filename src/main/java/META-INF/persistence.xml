<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>ua.university.shared.Student</class>
        <class>ua.university.shared.Teacher</class>
        <class>ua.university.shared.Club</class>
        <class>ua.university.shared.Person</class>
        <class>ua.university.shared.Subject</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/university" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="Forever007" />
        </properties>

    </persistence-unit>
</persistence>
